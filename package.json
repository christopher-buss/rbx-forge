{
	"name": "rbx-forge",
	"version": "1.0.0-beta.2",
	"description": "A roblox-ts and Luau CLI tool for fully-managed Rojo projects",
	"keywords": ["rbxts", "roblox", "rojo", "typescript", "cli", "tool"],
	"homepage": "https://github.com/christopher-buss/rbx-forge#readme",
	"bugs": {
		"url": "https://github.com/christopher-buss/rbx-forge/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/christopher-buss/rbx-forge.git"
	},
	"license": "MIT",
	"author": "Christopher Buss <christopher.buss@pm.me> (https://github.com/christopher-buss)",
	"contributors": ["osyrisrblx (https://github.com/osyrisrblx)"],
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.mjs"
		}
	},
	"types": "./dist/index.d.mts",
	"bin": {
		"rbx-forge": "dist/index.mjs",
		"forge": "dist/index.mjs",
		"fge": "dist/index.mjs"
	},
	"files": ["dist", "scripts"],
	"workspaces": {
		"packages": ["."],
		"onlyBuiltDependencies": ["simple-git-hooks", "unrs-resolver"],
		"publicHoistPattern": ["@typescript/*"]
	},
	"scripts": {
		"build": "tsdown --clean --dts",
		"lint": "eslint_d --cache",
		"lint:ci": "eslint --cache --cache-strategy content",
		"prepack": "nr build",
		"prepare": "simple-git-hooks",
		"prepublishOnly": "nr build",
		"release": "bumpp",
		"stub": "tsdown",
		"typecheck": "tsgo --noEmit",
		"watch": "tsdown --watch --dts"
	},
	"simple-git-hooks": {
		"pre-commit": "bun x lint-staged"
	},
	"lint-staged": {
		"*": "eslint_d --fix --cache"
	},
	"dependencies": {
		"@inquirer/prompts": "^8.0.2",
		"ansis": "^4.2.0",
		"arktype": "^2.1.25",
		"c12": "^3.3.1",
		"chokidar": "^4.0.3",
		"commander": "^14.0.2",
		"dedent": "^1.7.0",
		"giget": "^2.0.0",
		"magicast": "^0.5.0",
		"package-manager-detector": "^1.5.0",
		"picomatch": "^4.0.3",
		"type-fest": "^5.1.0",
		"yocto-spinner": "^1.0.0"
	},
	"devDependencies": {
		"@antfu/ni": "^27.0.0",
		"@isentinel/eslint-config": "^3.5.0",
		"@isentinel/tsconfig": "^1.0.0",
		"@types/bun": "^1.3.3",
		"@types/node": "^24.9.2",
		"@types/picomatch": "^4.0.2",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"@typescript/native-preview": "^7.0.0-dev.20251204.1",
		"better-typescript-lib": "^2.12.0",
		"bumpp": "^10.3.1",
		"eslint": "^9.38.0",
		"eslint-plugin-n": "^17.23.1",
		"eslint_d": "^14.3.0",
		"jiti": "^2.6.1",
		"lint-staged": "^16.2.6",
		"publint": "^0.3.15",
		"simple-git-hooks": "^2.13.1",
		"tsdown": "^0.15.11",
		"typescript": "^5.9.3",
		"unplugin-unused": "^0.5.4"
	},
	"packageManager": "bun@1.3.3",
	"engines": {
		"bun": ">=1.1.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"patchedDependencies": {
		"giget@2.0.0": "patches/giget@2.0.0.patch"
	}
}
