{
	"name": "rbx-forge",
	"version": "0.1.0",
	"description": "A CLI tool for fully-managed rojo projects.",
	"keywords": ["rbxts", "roblox", "rojo", "typescript", "cli", "tool"],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/christopher-buss/rbx-forge.git"
	},
	"license": "MIT",
	"author": "Christopher Buss <christopher.buss@pm.me> (https://github.com/christopher-buss)",
	"contributors": ["osyrisrblx (https://github.com/osyrisrblx)"],
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.mjs"
		}
	},
	"types": "./dist/index.d.mts",
	"bin": {
		"rbx-forge": "dist/index.mjs",
		"forge": "dist/index.mjs",
		"fge": "dist/index.mjs"
	},
	"files": ["dist", "scripts"],
	"scripts": {
		"build": "tsdown --clean --dts",
		"lint": "eslint_d --cache",
		"lint:ci": "eslint --cache --cache-strategy content",
		"prepack": "nr build",
		"prepare": "simple-git-hooks",
		"prepublishOnly": "nr build",
		"release": "bumpp",
		"stub": "tsdown",
		"typecheck": "tsc --noEmit",
		"watch": "tsdown --watch --dts"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*": "eslint_d --fix --cache"
	},
	"dependencies": {
		"@clack/prompts": "^1.0.0-alpha.6",
		"ansis": "^4.2.0",
		"arktype": "^2.1.12",
		"c12": "^3.3.0",
		"commander": "^14.0.0",
		"dedent": "^1.7.0",
		"execa": "^9.6.0",
		"magicast": "^0.3.5",
		"package-manager-detector": "^1.5.0",
		"type-fest": "^5.0.1"
	},
	"devDependencies": {
		"@antfu/ni": "^26.1.0",
		"@isentinel/eslint-config": "^3.3.0",
		"@isentinel/tsconfig": "^1.0.0",
		"@types/node": "^24.7.0",
		"@typescript-eslint/eslint-plugin": "^8.46.0",
		"@typescript-eslint/parser": "^8.46.0",
		"better-typescript-lib": "^2.12.0",
		"bumpp": "^10.3.1",
		"eslint": "^9.37.0",
		"eslint-plugin-n": "^17.23.1",
		"eslint_d": "^14.3.0",
		"jiti": "^2.6.1",
		"lint-staged": "^16.2.3",
		"publint": "^0.3.14",
		"rbx-forge": "workspace:*",
		"simple-git-hooks": "^2.13.1",
		"tsdown": "^0.15.6",
		"typescript": "^5.9.2",
		"unplugin-unused": "^0.5.3"
	},
	"packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34",
	"engines": {
		"node": ">=22.16.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
